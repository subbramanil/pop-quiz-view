<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.chaturaloka.quizview.QuizView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quiz_question_1"
            app:numAnswers="3"
            app:correctAnswer="2"
            app:equalWeight="true"
            app:revealAnswer="true"
            app:quizQuestion="@string/sample_question"
            app:answerSet="@array/sample_answers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"/>

    <com.chaturaloka.quizview.QuizView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quiz_question_2"
            app:numAnswers="4"
            app:correctAnswer="3"
            app:equalWeight="false"
            app:answerWeights="@array/sample_weights"
            app:revealAnswer="true"
            app:quizQuestion="@string/sample_question"
            app:answerSet="@array/sample_answers_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.75"/>

</androidx.constraintlayout.widget.ConstraintLayout>